rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles simplifiées pour le développement
    // ATTENTION: Ne pas utiliser en production !
    
    // Permettre l'accès à tous les documents pour les utilisateurs authentifiés
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
